


<div class="login">
<h2>Ingreso al sistema</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="campo">
   <%= f.label :Usuario %><br />
    <%= f.text_field :login, autofocus: true%>
  </div>

  <div class="campo">
    <%= f.label :Clave %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="boton">
    <%= f.submit "Ingresar" %>
  </div>
<% end %>
</div>
