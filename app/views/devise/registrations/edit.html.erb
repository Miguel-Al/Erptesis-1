<h2>Editar datos del usuario <%= @user.username %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>


  <div class="campo">
    <%= f.label :Nombre_de_usuario %><br />
    <%= f.text_field :username, autofocus: true %>
  </div>

  <div class="campo">
    <%= f.label :Correo %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="campo">
    <%= f.label :Nueva_clave %> <i>(Dejese en blanco si no desea cambiar su clave)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em> Minimo <%= @minimum_password_length %> caracteres </em>
    <% end %>
  </div>

  <div class="campo">
    <%= f.label :Confirmacion_de_clave %><i>(Dejese en blanco si no desea cambiar su clave)</i><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="campo">
    <%= f.label :Clave_actual %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>

<%= link_to "Volver", :back %>
